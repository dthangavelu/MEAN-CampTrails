
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create New Campground</h1>

        <form id="cancel" method="GET" action="/campgrounds">        
        </form>

        <div style="width:30%; margin: 30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" id="name" name="name" placeholder="Campground Name">
                <!-- class form-group div closing-->  
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" id="cost" name="cost" placeholder="Cost" min="0.01" step="0.01">
                <!-- class form-group div closing-->  
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" id="description" name="description" placeholder="Description">                        
                <!-- class form-group div closing-->  
                </div> 
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="image" placeholder="Image URL">                        
                <!-- class form-group div closing-->  
                </div>               
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>                
                <div class="form-group">
                    <button class="btn btn-default btn-lg btn-primary" style="width: 49.45%">Submit</button>
                    <button class="btn btn-default btn-lg btn-primary" style="width: 49.45%" form="cancel">Cancel</button>
                <!-- class form-group div closing-->  
                </div> 
            </form>
        <!-- div for styling with no class -->    
        </div>       
    <!-- class row div closing-->  
    </div>
<!-- class container div closing-->    
</div>

<% include ../partials/footer %>
