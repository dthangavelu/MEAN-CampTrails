
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add Comment To <%= campground.name %></h1>

        <form id="cancel" method="GET" action="/campgrounds/<%= campground._id %>">        
        </form>

        <div style="width:30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                        <input class="form-control" type="text" name="text" placeholder="Enter your comment">
                <!-- class form-group div closing-->  
                </div>
                             
                <div class="form-group">
                        <button class="btn btn-default btn-lg btn-primary" style="width: 49.45%">Submit</button>
                        <button class="btn btn-default btn-lg btn-primary" style="width: 49.45%" form="cancel">Cancel</button>
                <!-- class form-group div closing-->  
                </div> 
            </form>
        <!-- div for styling with no class -->    
        </div>       
    <!-- class row div closing-->  
    </div>
<!-- class container div closing-->    
</div>

<% include ../partials/footer %>
